@{
    ViewData["Title"] = "Basket";
}

<h2>Basket</h2>
<hr />

<div id="app">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Price</th>
                <th>Count</th>
                <th>Sub Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="(book,index) in books">
                <td>{{index+1}}</td>
                <td>{{book.Name}}</td>
                <td>{{book.Price}}</td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>

@section scripts{
<script src="~/lib/vue/vue.js"></script>
<script>
    var app = new Vue({
        el: "#app",
        data: {
            books: [],

        },
        mounted: function () {
            this.getBooks();
        },
        methods: {
            getBooks: function () {
                var basketData = localStorage.getItem('basket');
                var basket = JSON.parse(basketData);
                //debugger
                console.log(basket);
                this.books =basket.books;

            }
        }
    });
</script>
}

